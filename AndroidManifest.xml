<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalyearproject.precolorvisualizer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <supports-screens 
       
        />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/precolorvisulizericon"
        android:largeHeap="true"
        android:label="Pre Color Visualizer" >
        <activity
            android:name="com.finalyearproject.precolorvisualizer.MainActivity"
            android:configChanges="keyboardHidden"
            android:label="Pre Color Visualizer"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalyearproject.precolorvisualizer.AutoMode"
            android:configChanges="keyboardHidden"
            android:label="AutoMode"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.finalyearproject.precolorvisualizer.AUTOMODE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalyearproject.precolorvisualizer.UserMode"
            android:configChanges="keyboardHidden"
            android:label="USerMode"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.finalyearproject.precolorvisualizer.USERMODEDRAWING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.finalyearproject.precolorvisualizer.roughWork"
            ></activity>
    </application>

</manifest>